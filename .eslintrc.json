{
  "extends": "airbnb-base",
  "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jasmine": true
  },
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    }
  },
  "globals": {
    "firebaseui": true
  },
  "rules": {
    "max-len": [1, 80, 2],
    "class-methods-use-this": 0,
    "no-unused-vars": 0
  }
}
